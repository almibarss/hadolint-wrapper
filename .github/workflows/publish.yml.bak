name: Publish

on:
  release:
    types:
      - created

jobs:
  poetry:
    runs-on: ubuntu-latest

    steps:
      - uses: actions/checkout@v2

      - name: Build package
        uses: abatilo/actions-poetry@v1.5.0
        with:
          python_version: 3.6.0
          poetry_version: 0.12.17
          args: build

#       - name: Publish
#         uses: abatilo/actions-poetry@v1.5.0
#         with:
#           python_version: 3.6.0
#           poetry_version: 0.12.17
#           args: publish --username ${{ secrets.PYPI_USER }} --password ${{ secrets.PYPI_PASS }}

      - name: Archive package
        uses: actions/upload-artifact@v1
        with:
          name: dist
          path: dist/*.tar.gz

  brew:
    needs: poetry

    runs-on: ubuntu-latest

    steps:
      - uses: actions/checkout@v2

      - name: Set up Python 3.6
        uses: actions/setup-python@v1
        with:
          python-version: 3.6

      - name: Install dependencies
        run: |
          python -m pip install --upgrade pip
          pip install -r scripts/requirements.txt

      - name: Get release version
        run: echo ::set-env name=RELEASE_VERSION::${GITHUB_REF:10}

      - name: Download package
        uses: actions/download-artifact@v1
        with:
          name: dist

      - name: Create brew package
        run: scripts/create_brew_package.py dist/*.tar.gz

      - name: Upload release ${{ env.RELEASE_VERSION }} asset
        run: scripts/upload_github_release_asset.sh \
            github_api_token=${{ github.token }} \
            repo=${{ github.repository }} \
            tag=$RELEASE_VERSION \
            filename=dist/*-brew.tar.gz
